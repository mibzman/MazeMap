<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/one">

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AutoTrack"
            android:id="@+id/checkBox2"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:checked="true"
            android:textStyle="bold"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enable GPS"
            android:id="@+id/checkBox3" android:layout_below="@+id/checkBox2" android:layout_centerHorizontal="true"
            android:checked="true" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Preferred Map Type"
            android:id="@+id/textView" android:layout_below="@+id/checkBox3" android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp" android:textStyle="bold"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Map View"
            android:id="@+id/checkBox4"
            android:checked="false" android:layout_centerVertical="true" android:layout_alignStart="@+id/checkBox5"
            android:textStyle="bold"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrow View" android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/checkBox5" android:layout_below="@+id/checkBox4" android:layout_centerHorizontal="true"
            android:checked="true" android:textStyle="bold"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/m"
            android:src="@drawable/triangle"
            android:layout_row="2" android:layout_column="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>